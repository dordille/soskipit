@import 'nib'
@import 'vars'

textarea
  padding: 24px
  background: rgba(255,255,255,1)
  width: 100%
  height: 200px
  font-size: 32px
  resize: none
  border: none
  display: block

  font-size: 48px;
  line-height: 54px;
  text-rendering: optimizeLegibility;
  font-weight: normal;
  background-color: #FFF;
  color: #A6A6A6;

  outline: none

  &:focus
    border: none

.answer_box
  padding-top: 16px
  background: white
  border: 1px solid #D9D9D9

#content
  width: 800px
  margin: auto

.question
.response
  border-radius: 2px
  box-shadow: 0px 1px 1px 1px #bbb


.ask
  
  width: 800px
  margin-top: 64px

  .question
  .response
    position: relative
    box-shadow: 
    inset 0 0 8px  rgba(0,0,0,0.1),
          0 0 16px rgba(0,0,0,0.1)

    .tumblelog_name
      line-height: 64px
      font-size: 32px
      text-rendering: optimizeLegibility
      font-weight: normal


  .question
    .question_text
      padding-top: 32px
      padding-bottom: 32px

    .tumblelog
      position: absolute
      left: -32px
      top: -32px

      .tumblelog_name
        transform: rotate(-2deg)
        float: right
        line-height: 64px

      .avatar_container
        float: left
      
  .response
    margin-top: 20px

    .response_text
      padding-top: 32px
      padding-bottom: 32px

    .tumblelog
      position: absolute
      right: -32px
      bottom: -32px

      .tumblelog_name
        transform: rotate(-2deg)
        float: left
        line-height: 64px

      .avatar_container
        float: right


  .text
    font-size: 48px
    line-height: 54px
    text-rendering: optimizeLegibility
    font-weight: normal
    background-color: white
    color: #A6A6A6
    border: 1px solid #D9D9D9

.avatar_frame
  border: 0px
  border-radius: 50%
  box-shadow: 0px 1px 1px 1px #bbb

  img
    display: block
    border: 0
    margin: 0
    border-radius: 50%

.avatar_frame
.avatar_frame img
  width: 64px
  height: 64px
  border-radius: 50%
