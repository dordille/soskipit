@import 'nib'

.gif
  position: absolute
  z-index: -1
  top: 0
  left: 0
  padding: 0
  overflow: hidden
  background-color: #000
  min-width: 100%
  min-height: 100%

  img
    position: 0
    z-index: 100
    top: 0
    left: 0
    min-height: 100%
    min-width: 100%
    opacity: .4

.login
  top: 40%
  left: 0
  position: absolute
  min-width: 100%
  display: block
  height: auto

.login-box
  position: relative
  display: inline-block
  z-index: 9999


a#login
  line-height: 58px
  display: inline-block
  background-color: #669DCA
  color: white
  font-size: 42px
  padding: 2.2rem 5rem 2.2rem 10rem
  border-radius: 1.7rem
  text-decoration: none
  font-weight: bold
  position: relative
  letter-spacing: -2px
  opacity: 1
  transition: opacity .3s

  &:hover
    background-color: #71A1DA
    box-shadow: 
    inset 0 0 8px  rgba(0,0,0,0.1),
          0 0 16px rgba(0,0,0,0.1)

.t-icon
  position: absolute
  left: 2rem
  top: 2.3rem
  pointer-events: none

  img
    height: 6rem
    width: 6rem